<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="ItemXianGou">
	<typeAlias alias="ItemXianGouDO" type="com.yuwang.pinju.domain.sales.ItemXianGouDO" />
	<typeAlias alias="ItemXianGouQuery" type="com.yuwang.pinju.domain.sales.query.ItemXianGouQuery" />
	
	<resultMap id="itemXianGouMap" class="ItemXianGouDO" >
		<result property="id" column="ID" />
		<result property="itemId" column="ITEM_ID" />
		<result property="itemTitle" column="ITEM_TITLE" />
		<result property="sellerId" column="SELLER_ID" />
		<result property="sellerNick" column="SELLER_NICK" />
		<result property="count" column="COUNT" />
		<result property="status" column="STATUS" />
		<result property="buyCount" column="BUY_COUNT" />
		<result property="version" column="VERSION" />
		<result property="expiryStart" column="EXPIRY_START" />
		<result property="expiryEnd" column="EXPIRY_END" />
		<result property="gmtCreate" column="GMT_CREATE" />
		<result property="gmtModified" column="GMT_MODIFIED" />
		<result property="batchNum" column="BATCH_NUM" />
	</resultMap>
	<sql id = "itemXianGouSql">
		V.ID,
		V.ITEM_ID,
		V.ITEM_TITLE,
		V.SELLER_ID,
		V.SELLER_NICK,
		V.COUNT,
		V.STATUS,
		V.BUY_COUNT,
		V.VERSION,
		V.EXPIRY_START,
		V.EXPIRY_END,
		V.GMT_CREATE,
		V.GMT_MODIFIED,
		V.BATCH_NUM
	</sql>
	<insert id="insertItemXianGouDO" parameterClass="ItemXianGouDO">
		<selectKey keyProperty="id" resultClass="long">
			SELECT SEQ_ITEM_XIANGOU_ID.NEXTVAL FROM DUAL
		</selectKey>
	    INSERT INTO ITEM_XIANGOU 
	    (
			ID,          
			ITEM_ID,     
			ITEM_TITLE,  
			SELLER_ID,   
			SELLER_NICK, 
			COUNT,       
			STATUS,   
			BUY_COUNT,   
			VERSION,     
			EXPIRY_START,
			EXPIRY_END,  
			GMT_CREATE,  
			GMT_MODIFIED,
			BATCH_NUM
	    )
	    VALUES
	    (
	        #id:NUMBER#,
			#itemId#,
			#itemTitle#,
			#sellerId#,
			#sellerNick#,
			#count#,
			#status#,
			#buyCount#,
			#version#,
			#expiryStart#,
			#expiryEnd#,
			sysdate,
			sysdate,
			#batchNum#
	    )
	</insert>
	
	<select id="getItemXianGouDOById"  parameterClass="java.lang.Long" resultMap="itemXianGouMap">
        SELECT <include refid="itemXianGouSql"/> FROM ITEM_XIANGOU V WHERE V.ID=#value# 
	</select>
	
	<select id="getItemXianGouDOByItemId"  parameterClass="java.lang.Long" resultMap="itemXianGouMap">
        SELECT <include refid="itemXianGouSql"/> FROM ITEM_XIANGOU V WHERE V.ITEM_ID=#value# 
	</select>
	
	<update id="updateItemXianGouDO" parameterClass="ItemXianGouDO" >
		<![CDATA[UPDATE ITEM_XIANGOU]]> SET GMT_MODIFIED = SYSDATE
		<dynamic>
			<isNotEmpty prepend="," property="count">
				<![CDATA[COUNT = #count#]]>
			</isNotEmpty>
			<isNotEmpty prepend="," property="status">
				<![CDATA[STATUS = #status#]]>
			</isNotEmpty>
			<isNotEmpty prepend="," property="buyCount">
				<![CDATA[BUY_COUNT = #buyCount#]]>
			</isNotEmpty>
			<isNotEmpty prepend="," property="expiryStart">
				<![CDATA[EXPIRY_START = #expiryStart#]]>
			</isNotEmpty>
			<isNotEmpty prepend="," property="expiryEnd">
				<![CDATA[EXPIRY_END = #expiryEnd#]]>
			</isNotEmpty>
		</dynamic>
		<![CDATA[WHERE ID = #id# ]]>
	</update>
	
		<select id="getItemXianGouDOsCount"  parameterClass="ItemXianGouQuery" resultClass="java.lang.Integer">
		 SELECT COUNT(*) FROM ITEM_XIANGOU 
         <dynamic prepend="WHERE">
      	    <isNotEmpty property="batchNum" prepend="AND"> BATCH_NUM=#batchNum# </isNotEmpty>
         </dynamic>
	</select>
	
	<select id="getItemXianGouDOs"  parameterClass="ItemXianGouQuery" resultMap="itemXianGouMap">
		SELECT <include refid="itemXianGouSql"/>
		FROM (SELECT RID
	    	FROM (SELECT A.RID, ROWNUM RN
	        	FROM (SELECT ROWID RID FROM ITEM_XIANGOU
                	<dynamic prepend="WHERE">
			     	    <isNotEmpty property="batchNum" prepend="AND"> BATCH_NUM=#batchNum# </isNotEmpty>
	      			</dynamic>
                    ) A
	                WHERE rownum &lt;= #endRow#)
	          	WHERE RN &gt;= #startRow#) T,
	       ITEM_XIANGOU V
		WHERE V.ROWID = T.RID
	</select>
	
	
</sqlMap>

