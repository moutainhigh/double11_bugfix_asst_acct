	</resultMap>
	
	<select id="queryOrderChannelByOrderItemId" resultMap="OrderChannelDOResultNoExtend" parameterClass="Long">
	     <![CDATA[SELECT CHANNEL_ID,REWARD,CHANNEL_NICKNAME ,REAMOUNT,ORDER_ITEM_ID FROM TRADE_ORDER_CHANNEL ]]>
         <dynamic prepend="where" >
			 <isNotEmpty>
				 <![CDATA[ORDER_ITEM_ID = #orderItemId#]]>
			 </isNotEmpty>
   		 </dynamic>
    </select>

	<select id="queryOrderChannel" resultMap="OrderChannelResult" parameterClass="queryDistributeOrder">
	     <![CDATA[select * from(  
		select rownum r, a.* from (  
		SELECT O.ID,O.ORDER_ID,O.SELLER_ID,O.BUYER_ID,O.BUYER_NICK,O.SELLER_NICK,O.AUTO_CONFIRM_TIME,O.FAIL_REASON,
	O.ITEM_ID,O.SNAP_ID,O.ITEM_TITLE,O.ORDER_ITEM_PRICE,O.BUY_NUM,O.ITEM_PIC_URL,
	O.Original_PRICE,O.STATE_MODIFY_TIME,O.REFUND_STATE,O.REFUND_PRICE,
	O.ORDER_ITEM_ATTRIBUTES,O.ORDER_ITEM_STATE,O.ITEM_SKU_ID,
	O.ITEM_SKU_ATTRIBUTES,O.BUSSINESS_TYPE,O.GMT_MODIFIED,O.GMT_CREATE,C.CHANNEL_ID,C.REWARD,C.SUPPLIER_ID,C.CHANNEL_NICKNAME,C.REAMOUNT,C.ORDER_ITEM_ID,O.SELLER_MARGIN_PRICE
	FROM TRADE_ORDER_ITEM O,TRADE_ORDER_CHANNEL C]]>
         <dynamic prepend="where" >
		      <isNotEmpty prepend="and" property="channelIds" >
		        <![CDATA[C.CHANNEL_ID = #channelIds#]]>
		      </isNotEmpty>         
		     <isNotEmpty prepend="and" property="orderState">
				<![CDATA[O.ORDER_ITEM_STATE = #orderState#]]>
			 </isNotEmpty>
			 <isNotEmpty prepend="AND" property="supplierId">
				 <![CDATA[C.SUPPLIER_ID = #supplierId#]]>
			 </isNotEmpty>
   		 </dynamic>
   		 <![CDATA[
		 	and O.Id = C.Order_Item_Id order by GMT_CREATE desc) a where rownum
		 	<= #endRow#) where r >= #startRow#
		]]>
   		 
    </select>
    
	 <select id="queryOrderChannelNum"  resultClass="long" parameterClass="queryDistributeOrder">
       	  <![CDATA[SELECT COUNT(O.ID) FROM TRADE_ORDER_ITEM O,TRADE_ORDER_CHANNEL C]]>
	        <dynamic prepend="where" >
			      <isNotEmpty prepend="and" property="channelIds" >
			        <![CDATA[C.CHANNEL_ID = #channelIds#]]>
			      </isNotEmpty>
			     <isNotEmpty prepend="and" property="orderState">
					<![CDATA[O.ORDER_ITEM_STATE = #orderState#]]>
				 </isNotEmpty>
				<isNotEmpty prepend="AND" property="supplierId">
					 <![CDATA[C.SUPPLIER_ID = #supplierId#]]>
				 </isNotEmpty>
	   		 </dynamic>
   		  <![CDATA[
		 	 and O.Id = C.Order_Item_Id
		]]>
    </select>
    
    <select id="queryOrderChannelNumDuringMonth"  resultClass="long" parameterClass="queryDistributeOrder">
		<![CDATA[SELECT COUNT(*) FROM TRADE_ORDER_CHANNEL C WHERE (SYSDATE < ADD_MONTHS(C.GMT_CREATE, #month#)) ]]>
		<isNotEmpty property="type">
			<!-- 供应商页面订单信息 -->
			<isEqual property="type" compareValue="1">
				<isNotEmpty prepend="AND" property="supplierId" open="(" close=")">
					<![CDATA[C.SUPPLIER_ID = #supplierId#]]>
				</isNotEmpty>
			</isEqual>
			<!-- 分销商页面订单信息 -->
			<isEqual property="type" compareValue="0">
				<isNotEmpty prepend="AND" property="channelIds" open="(" close=")">
					<![CDATA[C.CHANNEL_ID = #channelIds#]]>
				</isNotEmpty>
			</isEqual>
		</isNotEmpty>
    </select>
    
   <insert id="insertOrderChannelDO" parameterClass="OrderChannelDO">
		<selectKey resultClass="long" keyProperty="id">
			SELECT SEQ_ORDER_CHANNEL_ID.nextval AS id FROM dual
     	</selectKey>
     	<![CDATA[INSERT INTO TRADE_ORDER_CHANNEL (ID,ORDER_ID,SUPPLIER_ID,CHANNEL_ID,
     	REWARD,GMT_CREATE,GMT_MODIFIED,CHANNEL_NICKNAME,REAMOUNT,ORDER_ITEM_ID) 
     	VALUES (#id#,#orderId#,#sellerId#,#channelIds#,#reward#,sysdate,sysdate,#channelNickName#,#reAmount#,#orderItemId#)]]>
	</insert>
    
    <update id="updateChannelAmount" parameterClass="OrderChannelDO">
		UPDATE TRADE_ORDER_CHANNEL 
		<dynamic prepend="SET">
			<isNotEmpty prepend="," property="reAmount">
				<![CDATA[REAMOUNT = #reAmount#]]>
			</isNotEmpty>
		</dynamic>
			<![CDATA[,GMT_MODIFIED = sysdate WHERE CHANNEL_ID = #channelIds# AND ORDER_ITEM_ID = #orderItemId#]]>
	</update> 
	
</sqlMap>

